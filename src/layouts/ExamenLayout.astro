---
import Layout from '@layouts/Layout.astro';
import Nav from '@components/Nav.astro';
import '@styles/global.css';

const { 
    title, 
    description, 
    category,
    tipoExamen,
} = Astro.props;
---

<Layout title={`${title} | Centro Médico`}>
    <Nav />
    
    <main class="min-h-screen bg-slate-50 pt-30 pb-20 animate-blurred-fade-in">
        <article class="max-w-4xl mx-auto px-4">
            
            <nav class="mb-6">
                <span class="inline-flex items-center px-4 py-1.5 rounded-full text-xs font-bold tracking-widest uppercase bg-indigo-100 text-indigo-700 border border-indigo-200">
                    {category}
                </span>
            </nav>

            <header class="mb-10">
                <h1 class="text-4xl md:text-6xl font-black text-slate-900 tracking-tight mb-6 leading-[1.1]">
                    {title}
                </h1>
                <p class="text-xl md:text-2xl text-slate-600 leading-relaxed border-l-4 border-indigo-500 pl-6 italic">
                    {description}
                </p>
            </header>

            <section class="mb-12">
                <div class="inline-flex items-center space-x-4 bg-white p-5 pr-10 rounded-2xl shadow-sm border border-slate-200">
                    <div class="bg-blue-50 p-3 rounded-xl">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Metodología / Tipo</p>
                        <p class="text-xl font-extrabold text-slate-800">{tipoExamen}</p>
                    </div>
                </div>
            </section>

            <div class="bg-white rounded-[2rem] p-8 md:p-14 shadow-sm border border-slate-200/60">
                <div class="prose prose-indigo prose-lg max-w-none 
                    prose-headings:text-slate-900 prose-headings:font-bold
                    prose-p:text-slate-600 prose-p:leading-relaxed
                    prose-strong:text-slate-900
                    prose-li:text-slate-600">
                    <slot /> 
                </div>
            </div>

            <footer class="mt-16 flex flex-col sm:flex-row items-center justify-between gap-8 border-t border-slate-200 pt-10">
                <a href="/examenes" class="group flex items-center text-slate-500 font-bold hover:text-indigo-600 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 transform group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Volver a Exámenes
                </a>
                <a href="/#contacto">
                    <button class="w-full sm:w-auto px-10 py-4 bg-blue-600 text-white font-black rounded-2xl shadow-lg shadow-blue-200 hover:bg-blue-700 hover:-translate-y-1 transition-all active:scale-95">
                        AGENDAR CITA
                    </button>
                </a>
            </footer>
            
        </article>
    </main>
</Layout>

<style is:global>
    /* Suavizado para tipografías modernas */
    html {
        -webkit-font-smoothing: antialiased;
        scroll-behavior: smooth;
    }

    /* Mejora de legibilidad en el slot de Markdown */
    .prose h2 {
        margin-top: 2em;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e2e8f0;
    }
</style>