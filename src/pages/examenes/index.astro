---
// Importaciones de Astro
import { getCollection, type CollectionEntry } from 'astro:content'; 
import Layout from '@layouts/Layout.astro';
// Asegúrate de que SearchExams se encuentra en src/components/searchExams.astro
import SearchExams from '@components/searchExams.astro';

/* Definir el tipo para el objeto agrupador */
type GroupedExamenes = Record<string, CollectionEntry<'examenes'>[]>; 

// 1. Obtener y Agrupar Exámenes
const allExamenes = await getCollection('examenes');

const groupedExamenes: GroupedExamenes = allExamenes.reduce((acc, examen) => {
    // Usamos 'category' según la definición de tu config.ts
    const category = examen.data.category; 
    if (!acc[category]) {
        acc[category] = [];
    }
    acc[category].push(examen);
    return acc;
}, {} as GroupedExamenes); 

const categories = Object.keys(groupedExamenes).sort();

/* 2. FUNCIÓN PARA SIMPLIFICAR EL RENDERIZADO DEL PRECIO */
 const formatPrice = (price: number): string => {
     // Formato de moneda USD (ajusta el locale si es necesario)
    return price.toLocaleString('es-ES', { style: 'currency', currency: 'USD' });
 };

/* 3. FUNCIÓN PARA DETERMINAR EL TIEMPO DE ENTREGA */
const getDeliveryTime = (tipoExamen: string): string => {
    // Estandarizamos el tipo de examen a minúsculas y sin acentos/espacios para una comparación robusta
    const normalizedType = tipoExamen.toLowerCase().trim().normalize("NFD").replace(/[\u0300-\u036f]/g, "");

    // Citometria entrega en 5 días
    if (normalizedType.includes('citometria')) {
        return '5 Días Hábiles';
    }
    // Todos los demás entregan en 10 días
    return '10 Días Hábiles';
};

---
<Layout title="IDI - Exámenes">
    
    <main class="container mx-auto px-4 pt-24 pb-16 animate-blurred-fade-in">
        <header class="text-center mb-12">
            <h1 class="text-6xl font-extrabold leading-tight text-gray-900 mb-4">
                Listado de Exámenes
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Explora nuestro catálogo de análisis especializados...
            </p>
        </header>

        <div class="max-w-6xl mx-auto">
            
            {/* INTEGRACIÓN DEL COMPONENTE DE BÚSQUEDA */}
            <SearchExams allExamenes={allExamenes} client:load />

            {/* IMPLEMENTACIÓN DE SECCIONES COLAPSABLES */}
            {categories.map((category) => (
                <details 
                    class="mb-8 category-section group" 
                    key={category} 
                >
                    <summary 
                        class="cursor-pointer list-none py-3 px-4 rounded-lg bg-indigo-50 hover:bg-indigo-100 transition duration-200 border border-indigo-200 shadow-md flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50"
                    >
                        <h2 class="text-2xl font-bold text-indigo-700 m-0">
                            {category}
                        </h2>
                        {/* Ícono de flecha para indicar colapso */}
                        <svg class="w-6 h-6 text-indigo-600 transform transition duration-300 group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </summary>
                    
                    {/* El contenido colapsable */}
                    <div class="pt-6 pb-2 animate-opacity-fade-in">
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {groupedExamenes[category].map((examen) => (
                                <a 
                                    href={`/examenes/${examen.slug}`} 
                                    class="block p-5 bg-white rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.01] transition duration-300 border-t-4 border-blue-500"
                                    key={examen.slug}
                                >
                                    <h3 class="text-xl font-bold text-gray-800 mb-2">{examen.data.title}</h3>
                                    <p class="text-sm text-gray-600 mb-3 line-clamp-2">{examen.data.description}</p>
                                    
                                    {/* INSERCIÓN DEL CAMPO DE TIEMPO DE ENTREGA Y PRECIO */}
                                    <div class="flex justify-start space-x-4 mt-4 border-t pt-3">
                                        {/* Campo de Tiempo de Entrega (Amarillo/Yellow) */}
                                        <div class="p-2 bg-yellow-50 border-l-4 border-yellow-600 rounded-md flex-1 min-w-0">
                                            <p class="text-xs font-medium text-gray-500 truncate">Entrega Aprox.</p>
                                            <p class="text-sm font-bold text-yellow-800">
                                                {getDeliveryTime(examen.data.tipoExamen)}
                                            </p>
                                        </div>
                                         <div class="p-2 bg-green-50 border-l-4 border-green-600 rounded-md flex-shrink-0">
                                            <p class="text-xs font-medium text-gray-500">Precio</p>
                                            <p class="text-lg font-extrabold text-green-700">
                                                {formatPrice(examen.data.price)}
                                            </p>
                                        </div> 
                                    </div>
                                    {/* Campo de Tipo de Examen separado */}
                                    <div class="pt-2 border-t border-gray-100 mt-2">
                                        <span class="text-xs font-semibold text-blue-600 uppercase">Tipo: {examen.data.tipoExamen}</span>
                                    </div>

                                </a>
                            ))}
                        </div>
                    </div>
                </details>
            ))}
            
            {/* INICIO DEL CONTENEDOR DE HORARIOS Y CONTACTO EN 2 COLUMNAS */}
            <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8 mt-12">
                
                {/* 1. CARD DE HORARIOS DE ATENCIÓN (COLUMNA IZQUIERDA) */}
